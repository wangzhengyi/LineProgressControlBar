<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/screen_brightness"
        android:textColor="#ffffff"
        android:textSize="28px"
        android:layout_marginTop="32px"/>

    <genius.com.wzy.linecontrolbar.LineProgressControlBar
        android:id="@+id/id_line_progress_control_bar"
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:layout_marginTop="70px"
        custom:divide_width="2px"
        custom:dot_count="3"
        custom:first_color="#3e3e3e"
        custom:progress_height="10px"
        custom:second_color="#fd592a"
        custom:total_width="184px" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/id_minus_img"
            android:layout_width="80px"
            android:layout_height="80px"
            android:contentDescription="@null"
            android:background="@drawable/minus_img_bg" />

        <ImageView
            android:id="@+id/id_plus_img"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_marginStart="28px"
            android:contentDescription="@null"
            android:background="@drawable/plus_img_bg" />
    </LinearLayout>
</LinearLayout>